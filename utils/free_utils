#include "../inc/minishell.h"

void	free_2d_int(int **arr)
{
	int	i;

	i = 0;
	if (!arr)
		return ;
	while (arr[i])
	{
		free(arr[i]);
		i++;
	}
	free(arr);
}

void	free_command(t_cmd *cmd)
{
	free_2d_char(cmd->tokens);
	free_2d_char(cmd->args);
	free_2d_char(cmd->redirs);
	free_2d_char(cmd->limiter_arr);
	free_2d_int(cmd->hd_arr);
	if (cmd->path)
		free(cmd->path);
}